{
  "name": "hugin-api",
  "version": "0.3.0",
  "description": "Hugin API is a RESTful API and websocket server for the Hugin Messenger service.",
  "main": "src/server.ts",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "yarn run build",
    "start": "node .",
    "test": "cross-env NODE_ENV=test mocha tests --recursive --ignore 'tests/k6/**' --timeout 10000 --exit",
    "pretest": "cross-env NODE_ENV=test npm run db:reset",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all --seeders-path ./database/seeders",
    "db:create:test": "cross-env NODE_ENV=test npx sequelize-cli db:create",
    "code-coverage": "npx c8 --check-coverage --lines 70 npm test",
    "code-coverage-report": "npx c8 report --temp-directory .c8 -o ./.c8/html_coverage -r html && open ./.c8/html_coverage/index.html"
  },
  "repository": "git+https://github.com/kryptokrona/hugin-api.git",
  "keywords": [
    "kryptokrona",
    "hugin"
  ],
  "author": "Marcus Cvjeticanin <mjovanc@icloud.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/kryptokrona/hugin-api/issues"
  },
  "homepage": "https://github.com/kryptokrona/hugin-api",
  "dependencies": {
    "@ledgerhq/hw-transport": "^6.27.1",
    "@types/express": "^4.17.14",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-rate-limit": "^6.4.0",
    "express-session": "^1.17.2",
    "http-errors": "^2.0.0",
    "hugin-crypto": "^0.0.2",
    "identicon.js": "^2.3.3",
    "int-to-rgb": "^1.0.0",
    "loglevel": "^1.8.0",
    "morgan": "^1.10.0",
    "perf_hooks": "^0.0.1",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.18.0",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.3",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.4.0",
    "ws": "^8.8.0"
  },
  "devDependencies": {
    "body-parser": "^1.20.0",
    "c8": "^7.11.2",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.19"
  }
}
