<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
<script>
    fetch('{{ index_file_url }}')
        .then((response) => {
            return response.json()
        })
        .then((json) => {
            var temp = "";
            json.items.forEach(item => {

                temp += "<tr>";
                temp += "<td>" + item.nickname + "</td>";
                temp += "<td>" + item.message + "</td>";
                temp += "<td>" + new Date(item.time * 1000) + "</td>";
                document.getElementById('item').innerHTML = temp;
            })
        })

</script>
<h2 style="text-align: center;">Last 100 messages:</h2>
<h5 style="text-align: center;">Want more? Use the api instead! https://{{ index_file_url }}/api/v1/posts</h5>
<div class="container">
    <table class="table">
        <thead>
        <tr>
            <th>nickname</th>
            <th>message</th>
            <th>Time</th>

        </tr>
        </thead>
        <tbody id="item">

        </tbody>
    </table>
</div>
</body>
</html>